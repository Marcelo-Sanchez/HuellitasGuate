@model HuellitasGuate.Models.Cita

@{
    ViewData["Title"] = "Detalles de la Cita";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css">
    <style>
        /* Estilo personalizado para la página */
        body {
            background-color: #f5f5f5;
            padding-top: 20px;
        }

        .container {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            padding: 20px;
            margin-top: 20px;
        }

        h1 {
            color: #007bff;
        }

        .details-label {
            font-weight: bold;
        }

        .btn {
            border-radius: 5px;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }

            .btn-secondary:hover {
                background-color: #545b62;
                border-color: #545b62;
            }
    </style>
</head>
<body>

    <div class="container">
        <h1 class="mb-4">Detalles de la Cita</h1>

        <div class="row">
            <div class="col-md-4">
                <div class="details-label">Nombre:</div>
                <div>@Html.DisplayFor(model => model.Nombre)</div>

                <div class="details-label mt-3">Mascota:</div>
                <div>@Html.DisplayFor(model => model.Mascota)</div>

                <div class="details-label mt-3">Servicio:</div>
                <div>@Html.DisplayFor(model => model.Servicio)</div>

                <div class="details-label mt-3">Teléfono:</div>
                <div>@Html.DisplayFor(model => model.Telefono)</div>
            </div>
            <div class="col-md-4">
                <div class="details-label">Fecha:</div>
                <div>@Html.DisplayFor(model => model.Fecha)</div>

                <div class="details-label mt-3">DPI:</div>
                <div>@Html.DisplayFor(model => model.Dpi)</div>

                <div class="details-label mt-3">Correo:</div>
                <div>@Html.DisplayFor(model => model.Correo)</div>

                <div class="details-label mt-3">Descripción:</div>
                <div>@Html.DisplayFor(model => model.Descripcion)</div>
            </div>
        </div>

        <div class="mt-4">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Editar</a>
            <a asp-action="Index" class="btn btn-secondary">Regresar a la Lista</a>
        </div>
    </div>

</body>
</html>
