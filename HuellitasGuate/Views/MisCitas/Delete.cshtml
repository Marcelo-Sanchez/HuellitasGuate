@model HuellitasGuate.Models.Cita

@{
    ViewData["Title"] = "Eliminar Cita";
}

<div class="container">
    <h1 class="display-4">Eliminar Cita</h1>
    <p class="lead">¿Estás seguro de que deseas eliminar esta cita?</p>

    <div class="card mt-4">
        <div class="card-body">
            <h4 class="card-title">Detalles de la Cita</h4>
            <hr />

            <dl class="row">
                <dt class="col-sm-3">Nombre:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

                <dt class="col-sm-3">Mascota:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Mascota)</dd>

                <dt class="col-sm-3">Servicio:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Servicio)</dd>

                <dt class="col-sm-3">Teléfono:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Telefono)</dd>

                <dt class="col-sm-3">Fecha:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Fecha)</dd>

                <dt class="col-sm-3">DPI:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Dpi)</dd>

                <dt class="col-sm-3">Correo:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Correo)</dd>

                <dt class="col-sm-3">Descripción:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Descripcion)</dd>
            </dl>

            <div class="text-center">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
                </form>
            </div>
        </div>
    </div>
</div>
