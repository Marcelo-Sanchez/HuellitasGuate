@model HuellitasGuate.Models.Cita

@{
    ViewData["Title"] = "Detalles de la Cita";
}

<div class="container my-5">
    <h1 class="text-center">Detalles de la Cita</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h4 class="card-title">Cita</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">Nombre:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>
                        <dt class="col-sm-4">Mascota:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Mascota)</dd>
                        <dt class="col-sm-4">Servicio:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Servicio.Nombre)</dd>
                        <dt class="col-sm-4">Teléfono:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Telefono)</dd>
                        <dt class="col-sm-4">Fecha:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Fecha)</dd>
                        <dt class="col-sm-4">DPI:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Dpi)</dd>
                        <dt class="col-sm-4">Correo Electrónico:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Correo)</dd>
                        <dt class="col-sm-4">Descripción:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Descripcion)</dd>
                    </dl>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Editar</a>
                    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
                </div>
            </div>
        </div>
    </div>
</div>
