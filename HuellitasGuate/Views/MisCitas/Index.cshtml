@model IEnumerable<HuellitasGuate.Models.Cita>

@{
    ViewData["Title"] = "Mis Citas";
}

<div class="container my-5">
    <h1 class="text-center">Mis Citas</h1>

    <div class="text-center">
        <a asp-action="Create" class="btn btn-primary mb-3">Crear Nueva Cita</a>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">@Html.DisplayFor(modelItem => item.Servicio)</h5>
                    </div>
                    <div class="card-body">
                        <h6 class="card-subtitle mb-2 text-muted">@Html.DisplayFor(modelItem => item.Fecha)</h6>
                        <p class="card-text">
                            <strong>Nombre:</strong> @Html.DisplayFor(modelItem => item.Nombre)<br />
                            <strong>Mascota:</strong> @Html.DisplayFor(modelItem => item.Mascota)<br />
                            <strong>Servicio:</strong> @Html.DisplayFor(modelItem => item.Servicio)<br />
                            <strong>Teléfono:</strong> @Html.DisplayFor(modelItem => item.Telefono)<br />
                            <strong>DPI:</strong> @Html.DisplayFor(modelItem => item.Dpi)<br />
                            <strong>Correo:</strong> @Html.DisplayFor(modelItem => item.Correo)<br />
                            <strong>Descripción:</strong> @Html.DisplayFor(modelItem => item.Descripcion)<br />
                        </p>
                    </div>
                    <div class="card-footer text-center">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
