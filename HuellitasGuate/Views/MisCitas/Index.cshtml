@model IEnumerable<HuellitasGuate.Models.Cita>

@{
    ViewData["Title"] = "Mis Citas";

    // Calcula el número de citas para hoy
    var citasHoy = Model.Count(c => c.Fecha.HasValue && c.Fecha.Value.Date == DateTime.Today);
    // Calcula el total de citas
    var totalCitas = Model.Count();
}

<div class="container my-5">
    <div class="text-center">
        <div class="card bg-primary text-white p-5 rounded">
            <div class="card-body">
                <h1 class="card-title">Panel de Control</h1>
                <div class="row">
                    <div class="col-md-6">
                        <div class="card bg-info text-white rounded">
                            <div class="card-body">
                                <h3 class="card-title">Total de Citas</h3>
                                <p class="card-text">@totalCitas</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card bg-success text-white rounded">
                            <div class="card-body">
                                <h3 class="card-title">Citas para Hoy</h3>
                                <p class="card-text">@citasHoy</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <h1 class="text-center mt-4">Mis Citas</h1>

    <div class="text-center">
        <a asp-action="Create" class="btn btn-primary mb-3">Crear Nueva Cita</a>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">@Html.DisplayFor(modelItem => item.Servicio.Nombre)</h5>
                    </div>
                    <div class="card-body">
                        <h6 class="card-subtitle mb-2 text-muted">@Html.DisplayFor(modelItem => item.Fecha)</h6>
                        <p class="card-text">
                            <strong>Nombre:</strong> @Html.DisplayFor(modelItem => item.Nombre)<br />
                            <strong>Mascota:</strong> @Html.DisplayFor(modelItem => item.Mascota)<br />
                            <strong>Servicio:</strong> @Html.DisplayFor(modelItem => item.Servicio.Nombre)<br />
                            <strong>Teléfono:</strong> @Html.DisplayFor(modelItem => item.Telefono)<br />
                            <strong>Fecha:</strong> @Html.DisplayFor(modelItem => item.Fecha)<br />
                            <strong>DPI:</strong> @Html.DisplayFor(modelItem => item.Dpi)<br />
                            <strong>Correo:</strong> @Html.DisplayFor(modelItem => item.Correo)<br />
                            <strong>Descripción:</strong> @Html.DisplayFor(modelItem => item.Descripcion)<br />
                        </p>
                    </div>
                    <div class="card-footer text-center">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
