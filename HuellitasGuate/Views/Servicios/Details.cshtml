@model HuellitasGuate.Models.Servicio

@{
    ViewData["Title"] = "Detalles del Servicio";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Si tienes un diseño compartido (layout) definido.
}

<div class="container">
    <h1 class="my-4">Detalles del Servicio</h1>

    <div class="mb-3">
        <h4>Servicio</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Nombre:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>
            <dt class="col-sm-3">Descripción:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Descripcion)</dd>
            <dt class="col-sm-3">Precio:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Precio)</dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Regresar a la Lista</a>
    </div>
</div>
